<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorSurface"
    android:orientation="vertical"
    android:padding="8dp">

    <RadioGroup
        android:id="@+id/dialog_sortingSettings_sortingAnchorGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/dialog_sortingSettings_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="16dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/dialog_sortingSettings_sortingAnchorGroup"
        />

    <RadioGroup
        android:id="@+id/dialog_sortingSettings_sortingOrderGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dialog_sortingSettings_line"/>

</LinearLayout>