<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/itemDrawer_checkBox"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/itemDrawer_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/itemDrawer_desc_tv"
        />

    <TextView
        android:id="@+id/itemDrawer_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Important"
        android:layout_marginHorizontal="10dp"
        style="@style/TextAppearance.Material3.BodyLarge"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/itemDrawer_checkBox"/>

    <TextView
        android:id="@+id/itemDrawer_desc_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Not so important text"
        android:layout_marginHorizontal="10dp"
        style="@style/TextAppearance.Material3.BodySmall"
        app:layout_constraintTop_toBottomOf="@id/itemDrawer_name_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/itemDrawer_checkBox"/>

</androidx.constraintlayout.widget.ConstraintLayout>