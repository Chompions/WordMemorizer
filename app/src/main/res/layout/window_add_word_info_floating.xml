<?xml version="1.0" encoding="utf-8"?>
<com.sawelo.wordmemorizer.ui.custom_view.DialogWindowScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:clipToPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/info_wordText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingHorizontal="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="28dp"
            android:background="@drawable/rounded_background"
            android:backgroundTint="?colorPrimaryContainer"
            tools:text="irjgiurgj iudrgidu goisjdi udidufi sugidu dfsdfsfesfesef"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/info_wordText_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/long_press_to_edit"
            android:enabled="false"
            android:paddingHorizontal="20dp"
            android:paddingVertical="8dp"
            app:layout_constraintBottom_toBottomOf="@id/info_wordText"
            app:layout_constraintEnd_toEndOf="@id/info_wordText"/>

        <TextView
            android:id="@+id/info_furiganaText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            tools:text="TextView"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_wordText" />

        <TextView
            android:id="@+id/info_definitionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            tools:text="TextView"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_furiganaText" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/info_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="8dp"
            android:text="@string/ok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_definitionText"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.sawelo.wordmemorizer.ui.custom_view.DialogWindowScrollView>